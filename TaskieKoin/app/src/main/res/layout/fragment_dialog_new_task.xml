<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_large"
        android:paddingEnd="@dimen/margin_large"
        android:orientation="vertical">
    <TextView
            android:id="@+id/newTaskHeading"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/HeadingTextView"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/heading_new_task"/>
    <EditText
            android:id="@+id/newTaskTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_new_task_title"
            android:layout_marginBottom="@dimen/margin_large"
            android:inputType="textCapSentences"
            tools:ignore="Autofill"/>
    <EditText
            android:id="@+id/newTaskDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_new_task_description"
            android:layout_marginBottom="@dimen/margin_large"
            android:inputType="textCapSentences"
            tools:ignore="Autofill"/>
    <Spinner
            android:id="@+id/prioritySelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/priorities"
            android:layout_marginTop="@dimen/margin_large"/>
    <Button
            android:id="@+id/saveTaskAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_gravity="center"
            android:text="@string/button_text_save"/>

</LinearLayout>